{
  "name": "sunshine",
  "version": "1.0.0",
  "description": "Landing page for sunshine",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass sass/main.scss css/style.css -w",
    "compile:sass": "node-sass sass/main.scss css/style.comp.css",
    "concat:css": "concat -o css/style.concat.css css/font-icons.css css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/style.concat.css -o css/style.prefix.css",
    "compress:css": "node-sass css/style.prefix.css css/style.css --output-style compressed"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fortunee/sunshine.git"
  },
  "author": "Fortune Ekeruo",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/fortunee/sunshine/issues"
  },
  "homepage": "https://github.com/fortunee/sunshine#readme",
  "devDependencies": {
    "autoprefixer": "^9.4.9",
    "concat": "^1.0.3",
    "node-sass": "4.9.4",
    "postcss-cli": "^6.1.2"
  }
}
